function toggleOption(n){var t=$(n);t.is(":visible")?t.hide():t.show()}function handlePromoInput(){var t=$("#productId"),i=$("#promoCode"),n=new FormData;n.append("productId",t.val());n.append("promoCode",i.val());$.ajax({url:"/Home/NewPrice",method:"post",data:n,processData:!1,contentType:!1,success:function(n){var t=n.split(":");oldPrice.css("text-decoration","line-through");oldPrice.css("color","red");newPrice[0].innerText=t[0]+" ₽";newPrice.show();discountPercent[0].innerText="Скидка "+t[1]+"%";discountPercent.show()},error:function(){oldPrice.css("text-decoration","none");oldPrice.css("color","white");newPrice.hide();discountPercent.hide()}})}var oldPrice=$("#oldPrice"),newPrice=$("#newPrice"),discountPercent=$("#discountPercent");